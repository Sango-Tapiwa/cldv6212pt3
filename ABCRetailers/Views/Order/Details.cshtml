<!-- Views/Order/Details.cshtml -->
@using ABCRetailers.Models
@model ABCRetailers.Models.Order
@{
    ViewData["Title"] = "Order Details";
}

<h1 class="mb-4"><i class="bi bi-receipt"></i> Order Details</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><strong>Order ID:</strong> <code>@Model.Id</code></span>
                @{
                    var badgeClass = Model.Status switch
                    {
                        OrderStatus.Submitted => "bg-info",
                        OrderStatus.Processing => "bg-warning",
                        OrderStatus.Processed => "bg-success",
                        OrderStatus.Cancelled => "bg-danger",
                        _ => "bg-secondary"
                    };
                }
                <span class="badge @badgeClass">@Model.Status</span>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h5>Customer Information</h5>
                        <p class="mb-1"><strong>Customer ID:</strong> @Model.CustomerId</p>
                        <p class="mb-1"><strong>Username:</strong> @Model.Username</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Order Information</h5>
                        <p class="mb-1"><strong>Order Date:</strong> @Model.OrderDateUtc.ToString("MMMM dd, yyyy HH:mm")</p>
                        <p class="mb-1"><strong>Status:</strong> @Model.Status</p>
                    </div>
                </div>

                <hr />

                <h5>Product Details</h5>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Unit Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><code>@Model.ProductId</code></td>
                                <td>@Model.ProductName</td>
                                <td>@Model.UnitPrice.ToString("C")</td>
                                <td>@Model.Quantity</td>
                                <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="4" class="text-end"><h5>Grand Total:</h5></td>
                                <td><h5 class="text-success">@Model.TotalAmount.ToString("C")</h5></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="d-flex gap-2 mt-4">
                    @if (Context.Session.GetString("Role") == "Admin")
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit Status
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    }
                    else
                    {
                        <a asp-action="MyOrders" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to My Orders
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
