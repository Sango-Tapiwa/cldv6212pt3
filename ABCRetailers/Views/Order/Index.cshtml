<!-- Views/Order/Index.cshtml -->
@using ABCRetailers.Models
@model IEnumerable<ABCRetailers.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<h1 class="mb-4"><i class="bi bi-cart-check"></i> All Orders</h1>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Total</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><code>@order.Id.Substring(0, 8)...</code></td>
                                <td>@order.Username</td>
                                <td>@order.ProductName</td>
                                <td>@order.Quantity</td>
                                <td>@order.UnitPrice.ToString("C")</td>
                                <td><strong>@order.TotalAmount.ToString("C")</strong></td>
                                <td>@order.OrderDateUtc.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @{
                                        var badgeClass = order.Status switch
                                        {
                                            OrderStatus.Submitted => "bg-info",
                                            OrderStatus.Processing => "bg-warning",
                                            OrderStatus.Processed => "bg-success",
                                            OrderStatus.Cancelled => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@order.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@order.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No orders found.
    </div>
}
