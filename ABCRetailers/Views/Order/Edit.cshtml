<!-- Views/Order/Edit.cshtml -->
@using ABCRetailers.Models
@model ABCRetailers.Models.Order
@{
    ViewData["Title"] = "Edit Order";
}

<h1 class="mb-4"><i class="bi bi-pencil"></i> Edit Order Status</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <div class="alert alert-info">
                    <strong>Order ID:</strong> <code>@Model.Id</code>
                </div>

                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" asp-for="Quantity" />
                    <input type="hidden" asp-for="UnitPrice" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label class="form-label">Customer</label>
                        <input type="text" class="form-control" value="@Model.Username" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product</label>
                        <input type="text" class="form-control" value="@Model.ProductName" readonly />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Quantity</label>
                            <input type="text" class="form-control" value="@Model.Quantity" readonly />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Total Amount</label>
                            <input type="text" class="form-control" value="@Model.TotalAmount.ToString("C")" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Order Status</label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<OrderStatus>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Update Status
                        </button>
                        <a asp-action="Manage" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

