@model FileUploadModel
@{
    ViewData["Title"] = "Upload Proof of Payment";
}

<h1 class="mb-4"><i class="bi bi-cloud-upload"></i> Upload Proof of Payment</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="ProofOfPayment" class="form-label">Select File</label>
                        <input asp-for="ProofOfPayment" class="form-control" type="file" accept="image/*,.pdf" />
                        <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                        <small class="text-muted">Supported formats: Images (JPG, PNG) and PDF</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="OrderId" class="form-label">Order ID (Optional)</label>
                        <input asp-for="OrderId" class="form-control" placeholder="Enter order ID" />
                        <span asp-validation-for="OrderId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Customer Name (Optional)</label>
                        <input asp-for="CustomerName" class="form-control" placeholder="Enter customer name" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> Upload proof of payment for order verification.
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-cloud-upload"></i> Upload File
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5><i class="bi bi-question-circle"></i> Upload Guidelines</h5>
                <ul class="small">
                    <li>Maximum file size: 50 MB</li>
                    <li>Supported formats: JPG, PNG, PDF</li>
                    <li>Ensure the image is clear and readable</li>
                    <li>Include order ID for faster processing</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
